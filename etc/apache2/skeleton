<VIRTUALHOST *:80>
 ServerAdmin webmaster@localhost
 ServerName SITEDOMAIN
 DocumentRoot /var/www/SITEDOCROOT
 <DIRECTORY />
 Options FollowSymLinks
 AllowOverride None
 </DIRECTORY>
 <DIRECTORY /var/www/SITEDOCROOT/>
  Options +FollowSymLinks
  AllowOverride All
 </DIRECTORY>
 ErrorLog /var/www/SITEDOMAIN/log/error.log
 # Possible values: debug, info, notice, warn, error, crit, alert, emerg
 LogLevel warn
 CustomLog /var/www/SITEDOMAIN/log/access.log combined
</VIRTUALHOST>